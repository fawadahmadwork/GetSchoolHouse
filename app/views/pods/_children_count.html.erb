<% if @approved_children.any? && @approved_children.count >=15  %>
   
  <h1> Pod is full</h1>
  <% elsif %>
  <h2>Children in this Pod:
 <%= @approved_children.count %></h2>
  <p>REMAINING children: <%= 15-@approved_children.count %></p>
  <% @approved_children.each do |child| %>
    <p>Name: <%= child.name %></p>

<% end %>
<% else %>
  <p>No children found for this pod.</p>
<% end %>