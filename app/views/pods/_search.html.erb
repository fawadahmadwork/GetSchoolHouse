<div style="width: 100%;">
  <%= form_tag(pods_path, method: :get, class: "search-form") do %>
    <div style="display: flex; width: 100%;">
      <%= text_field_tag(:search, params[:search], placeholder: "Search by name, address, zip_code, or grade '1 to 5'", style: "width: 100%;") %>
      <%= submit_tag("Search", style: "margin-left: 5px;") %>
    </div>
  <% end %>
</div>
