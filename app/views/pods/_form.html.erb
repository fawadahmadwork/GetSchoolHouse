<%= form_with(model: pod) do |form| %>
  <% if pod.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(pod.errors.count, "error") %> prohibited this pod from being saved:</h2>

      <ul>
        <% pod.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :grade, style: "display: block" %>
    <%= form.select :grade, options_for_select((1..5).map { |n| [n.ordinalize, n] }) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
